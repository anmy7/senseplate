<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/mainli"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <TextView
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/add_header"
                android:textColor="@color/colorBlack"
                android:textSize="37sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:textColor="#FF0000"
                android:textSize="17dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/item_name"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/add_item_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/search_field_rounded"
                android:ems="10"
                android:hint="@string/add_item_hint"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 "
                android:textColorHint="@color/colorGrey"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/protein_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/protein"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/fat_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="50dp"
                    android:text="@string/fats"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/protein_add_field"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/search_field_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@null"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/fat_add_field"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search_field_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@null"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/carbohydrate_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/carbohydrates"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/carbohydrate_add_field"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/search_field_rounded"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@null"
                android:visibility="visible" />

            <TextView
                android:id="@+id/total_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/total_calories"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/calories_field"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/search_field_rounded"
                android:ems="10"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/show_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/edit_item_rounded"
                    android:paddingLeft="30dp"
                    android:paddingTop="15dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="15dp"
                    android:text="@string/preview"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/show_chart_rounded"
                    android:paddingLeft="30dp"
                    android:paddingTop="15dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="15dp"
                    android:text="@string/chart"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/clear_button_rounded"
                android:text="@string/clear_all"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/save_entry_rounded"
                android:text="@string/save_item"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:drawableTop="@drawable/ic_home_black_24dp"
        android:paddingTop="5dp"
        android:text="@string/main_header"
        android:textSize="8sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button1"
        android:background="@color/colorWhite"
        android:drawableTop="@drawable/ic_library_add_green_24dp"
        android:paddingTop="5dp"
        android:shadowColor="@color/colorBlue"
        android:text="Add"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="8sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button2"
        android:background="@color/colorWhite"
        android:drawableTop="@drawable/ic_history_black_24dp"
        android:paddingTop="5dp"
        android:text="History"
        android:textSize="8sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button3"
        android:background="@color/colorWhite"
        android:drawableTop="@drawable/ic_settings_black_24dp"
        android:paddingTop="5dp"
        android:text="Settings"
        android:textSize="8sp" />

    </RelativeLayout>